<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.movement.ChartMovementFragment"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_color_transparent">

            <RelativeLayout
                android:id="@+id/accelerometer"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_accelerometer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_toStartOf="@+id/txt_accelerometer_Unidad_medida"
                    android:text="@string/text_accelerometer"
                    android:textAlignment="center"
                    android:textAppearance="@style/stl_text_setting_label" />

                <TextView
                    android:id="@+id/txt_accelerometer_Unidad_medida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:gravity="center_vertical"
                    android:text="@string/unit_of_measurement_accelerometer"
                    android:textAppearance="@style/sound_configuration" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/accelerometer"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                tools:ignore="UselessParent">

                <TableLayout
                    android:id="@+id/filesTableLayoutAccelerometer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_color_transparent">

            <RelativeLayout
                android:id="@+id/gyroscope"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_gyroscope"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_toStartOf="@+id/txt_gyroscope_Unidad_medida"
                    android:text="@string/text_gyroscope"
                    android:textAlignment="center"
                    android:textAppearance="@style/stl_text_setting_label" />

                <TextView
                    android:id="@+id/txt_gyroscope_Unidad_medida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:gravity="center_vertical"
                    android:text="@string/unit_of_measurement_gyroscope"
                    android:textAppearance="@style/sound_configuration" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/gyroscope"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                tools:ignore="UselessParent">

                <TableLayout
                    android:id="@+id/filesTableLayoutGyroscope"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_color_transparent">

            <RelativeLayout
                android:id="@+id/magnetometer"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_magnetometer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_toStartOf="@+id/txt_magnetometer_Unidad_medida"
                    android:text="@string/text_magnetometer"
                    android:textAlignment="center"
                    android:textAppearance="@style/stl_text_setting_label" />

                <TextView
                    android:id="@+id/txt_magnetometer_Unidad_medida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:gravity="center_vertical"
                    android:text="@string/unit_of_measurement_magnetometer"
                    android:textAppearance="@style/sound_configuration" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/magnetometer"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                tools:ignore="UselessParent">

                <TableLayout
                    android:id="@+id/filesTableLayoutMagnetometer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</ScrollView>