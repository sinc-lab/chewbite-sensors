<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!--<style name="Theme.ChewBiteSensors" parent="Theme.MaterialComponents.DayNight.NoActionBar"> --> <!-- Para habilitar el modo oscuro en toda la aplicación -->
    <style name="Theme.ChewBiteSensors" parent="Theme.MaterialComponents.Light.NoActionBar"> <!-- Deshabilitar el modo oscuro para toda la aplicación -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_700</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item> <!-- Deshabilitar el modo oscuro para toda la aplicación -->
    </style>

    <style name="Theme.TextNameAPP" parent="Base.TextAppearance.AppCompat.Display1">
        <item name="android:textSize">@dimen/abc_dropdownitem_icon_width</item>
        <item name="android:textColor">@color/black_950</item>
        <item name="android:layout_width">296dp</item>
    </style>

    <!-- styles.xml -->
    <style name="title_configuration">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_950</item>
    </style>

    <!-- styles.xml -->
    <style name="sound_configuration">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_900</item>
    </style>

    <!-- styles.xml -->
    <style name="frequency">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_800</item>
    </style>

    <!-- styles.xml -->
    <style name="FrequencyOptionsList" >
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/fira_sans_condensed_regular</item>
        <item name="android:textColor">@color/black_800</item>
    </style>

    <!-- styles del boton secundario -->
    <style name="Theme.Secondary_Button" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/black_50</item>
    </style>

    <style name="TextAppearance.App.Button" parent="@style/TextAppearance.AppCompat.Large">
        <item name="fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- styles del boton primario -->
    <style name="Theme.Primary_Button" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="android:background">@drawable/my_btn_toggle</item>
    </style>

    <!-- styles del texto de ">Nombre del experimento<" -->
    <style name="stl_experiment_name">
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_experiment_name</item>
    </style>

    <!-- styles del texto de las distintas configuraciones que se puede editar en la app  -->
    <style name="stl_text_setting_label">
        <item name="fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_experiment_name</item>
    </style>

    <!-- ↓ styles del texto del menú de navegación dentro de configuraciones ↓ -->
    <style name="BottomNavigationTextActive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">16sp</item> <!-- Tamaño del texto activo -->
        <item name="fontFamily">@font/cabin_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="BottomNavigationTextInactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">16sp</item> <!-- Tamaño del texto inactivo -->
        <item name="fontFamily">@font/cabin_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:padding">0dp</item>
    </style>
    <!-- ↑ styles del texto del menú de navegación dentro de configuraciones ↑ -->
</resources>