<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChewBiteSensors" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_700</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TextNameAPP" parent="Base.TextAppearance.AppCompat.Display1">
        <item name="android:textSize">@dimen/abc_dropdownitem_icon_width</item>
        <item name="android:textColor">@color/black_950</item>
        <item name="android:layout_width">296dp</item>
    </style>

    <!-- styles.xml -->
    <style name="title_configuration">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_950</item>
    </style>

    <!-- styles.xml -->
    <style name="sound_configuration">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_900</item>
    </style>

    <!-- styles.xml -->
    <style name="frequency">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_800</item>
    </style>

    <!-- styles.xml -->
    <style name="boton_secun">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textColor">@color/black_800</item>
    </style>
</resources>